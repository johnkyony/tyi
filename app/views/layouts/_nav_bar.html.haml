.container-fluid
  .row
    .col-md-12
      #wrapper
        .overlay
        / Sidebar
        %nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
          %ul.nav.sidebar-nav.flex-column
            %li.sidebar-brand.nav-item
              = render 'layouts/logo_badge'
            
            - @categories.each do |category| 
              %li.nav-item
                %a{:href => "/blogr/categories/#{category.id}/posts"} #{category.name}
            
             
            %li.nav-item
              %a{:href => "#"} Contact
            %li.nav-item
              %a{:href => "https://twitter.com/maridlcrmn"} Follow me
        = render "layouts/top_right_nav"
        / /#sidebar-wrapper
        / Page Content
        // = render 'layouts/page_content'
        #page-content-wrapper
          %button.hamburger.is-closed{"data-toggle" => "offcanvas", :type => "button"}
            %span.hamb-top
            %span.hamb-middle
            %span.hamb-bottom
          .container
            .row
              .col-lg-8.col-lg-offset-2
                = yield
               
                
        / /#page-content-wrapper
      / /#wrapper